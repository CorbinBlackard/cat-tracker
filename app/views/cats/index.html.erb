<p style="color: green"><%= notice %></p>

<% content_for :title, "Cats" %>

<div class="container">
	<h1>Neighorhood Cats</h1>

	<div class="alert alert-info mb-4">
		<h4>Community Feeding Status</h4>
		<% hungry = @cats.count(&:needs_feeding?)%>
		<% limit_reach = @cats.count { |c| !c.can_be_fed_today? }%>

		<% if hungry > 0 %>
			<p><strong><%= hungry %> cat(s) need feeding right now!</strong></p>
		<% else %>
			<p><strong> All cats are fed! </strong></p>
		<% end %>

		<p class="mb-0">
			<%= link_to "View feeding guidelines", "#", class: "text-decoration-none"%> â€¢ Daily limit: 3 feeds per cat
		</p>
	</div>

	<div id="cats" class="row">
		<% @cats.each do |cat| %>
			<div class="col-md-6 col-lg-4 mb-4">
				<div class="cat-card card h-100">
					<div class="card-body">
						<%= render cat %>
						<div class="mt-3">
							<%= link_to "Feeding Details", cat, class: "btn btn-primary" %>
							<%= link_to "Edit", edit_cat_path(cat), class: "btn btn-outline-secondary" %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>

	<div class="mt-4">
		<%= link_to "Add New Cat", new_cat_path, class: "btn btn-success" %>
		<%= link_to "Back to Home", root_path, class: "btn btn-outline-primary" %>
	</div>
</div>