<p style="color: green"><%= notice %></p>

<%= render @cat %>

<div class="cat_details">
	<%= link_to "Edit this cat", edit_cat_path(@cat) %> |
	<%= link_to "Back to cats", root_path %>

	<%= button_to "Destroy this cat", @cat, method: :delete %>
</div>

<% @cat.reset_daily_count_if_needed %>

<% if @cat.can_be_fed_today? %>
  <!-- Simple feeding status without Bootstrap -->
  <div style="border: 1px solid #ccc; padding: 15px; margin-bottom: 20px; background: #f8f9fa;">
    <h3>ğŸ½ï¸ Feeding Status</h3>
    
    <% if @cat.needs_feeding? %>
      <div style="background: #fff3cd; padding: 10px; border: 1px solid #ffc107;">
        <p><strong>âš ï¸ This cat needs feeding!</strong></p>
        <p>Last fed: <%= @cat.time_since_last_fed %></p>
        <%= button_to "âœ… Mark as Fed Now", feed_cat_path(@cat), method: :post %>
      </div>
    <% else %>
      <div style="background: #d1ecf1; padding: 10px; border: 1px solid #0dcaf0;">
        <p><strong>âœ… Feeding Status Good</strong></p>
        <p>Last fed: <%= @cat.time_since_last_fed %></p>
        <%= button_to "ğŸ”„ Update as Fed Now", feed_cat_path(@cat), method: :post %>
      </div>
    <% end %>
    
    <p>Times fed today: <%= @cat.times_fed_today %></p>
    <p><small>Feeds remaining today: <strong><%= @cat.daily_feeds_remaining %>/3</strong></small></p>
  </div>
<% else %>
  <div style="border: 1px solid #ff6b6b; padding: 15px; margin-bottom: 20px; background: #fff5f5;">
    <h3 style="color: #dc3545;">âš ï¸ Daily Limit Reached</h3>
    <p><strong><%= @cat.name %> has been fed 3 times already today!</strong></p>
    <p>Last fed: <%= @cat.time_since_last_fed %></p>
    <p><small>Daily limit: 3 feeds per cat. Resets at midnight.</small></p>
  </div>
<% end %>