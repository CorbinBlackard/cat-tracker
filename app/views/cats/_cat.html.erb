<div>
	<h3><%= cat.name %></h3>
	<p><strong>Color:</strong> <%= cat.color %> | 
		<strong>Location:</strong> <%= cat.location %></p>
	
	<!-- Simple feeding status -->
	<% cat.reset_daily_count_if_needed %>
	<p> Fed: <%= cat.times_fed_today%>/3 </p>
	<% if !cat.can_be_fed_today? %>
		<p>⛔ <strong>Fed 3/3 times today</strong></p>
	<% elsif cat.needs_feeding? %>
		<p>⚠️ <strong>Needs food!</strong> Last fed: <%= cat.time_since_last_fed %></p>
		<%= button_to "Feed Now", feed_cat_path(cat), method: :post %>
	<% else %>
		<p>✅ <strong>Fed:</strong> <%= cat.time_since_last_fed %></p>
		<%= button_to "Feed Again", feed_cat_path(cat), method: :post %>
	<% end %>
</div>